#! /usr/bin/env ruby
$LOAD_PATH << File.join(File.dirname(__FILE__), *%w<.. lib>)
require 'cmled'

axis=ARGV.shift
rotate_angle = ARGV.shift.to_f
$stderr.puts 'rotate %f degrees around the %s-axis' % [rotate_angle, axis]

doc = CMLed::Doc.new(ARGF)
doc.rotate(axis, rotate_angle)

doc.write($stdout)
